<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayout30"
        android:layout_width="20dp"
        android:layout_height="65dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_marginStart="25dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/lineIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/not_checked" />

        <LinearLayout
            android:id="@+id/line_color"
            android:layout_width="2dp"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:background="@drawable/mall_my_line_background" />

    </LinearLayout>

    <TextView
        android:id="@+id/content"
        android:layout_width="310dp"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/linearLayout30"
        app:layout_constraintTop_toTopOf="@+id/linearLayout30" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/content"
        app:layout_constraintTop_toBottomOf="@+id/content"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>