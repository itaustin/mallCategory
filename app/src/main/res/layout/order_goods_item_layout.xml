<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.rbt.diamond.custom_view.CustomRoundAngleImageView
        android:id="@+id/goods_image"
        android:layout_width="68dp"
        android:layout_height="69dp"
        android:scaleType="fitXY"
        android:layout_marginStart="21dp"
        android:src="@mipmap/avatar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/goods_name"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="17.5dp"
        android:textColor="#ff333333"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/goods_image"
        app:layout_constraintTop_toTopOf="@+id/goods_image" />

    <TextView
        android:id="@+id/goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9.5dp"
        android:textColor="@android:color/holo_red_light"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/goods_name"
        app:layout_constraintTop_toBottomOf="@+id/goods_name" />

    <TextView
        android:id="@+id/sku_attr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9.5dp"
        android:layout_marginBottom="10.5dp"
        android:textColor="#ff999999"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/goods_price"
        app:layout_constraintTop_toBottomOf="@+id/goods_price" />

    <TextView
        android:id="@+id/goods_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff999999"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/sku_attr"
        app:layout_constraintEnd_toEndOf="@+id/goods_name"
        app:layout_constraintTop_toTopOf="@+id/sku_attr" />

</androidx.constraintlayout.widget.ConstraintLayout>