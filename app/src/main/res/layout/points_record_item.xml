<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title"
        android:layout_width="179dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="description"
        android:layout_marginTop="19.5dp"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/description"
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.5dp"
        android:text="description"
        android:layout_marginBottom="19.5dp"
        android:textColor="#999999"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/points_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-220.00"
        android:layout_marginEnd="9.5dp"
        android:textColor="#ffcab369"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/description"
        app:layout_constraintEnd_toStartOf="@+id/imageView9"
        app:layout_constraintTop_toTopOf="@+id/title" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginEnd="21dp"
        android:src="@mipmap/right"
        app:layout_constraintBottom_toBottomOf="@+id/points_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/points_number" />

</androidx.constraintlayout.widget.ConstraintLayout>