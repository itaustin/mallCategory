<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.rbt.diamond.custom_view.CustomRoundAngleImageView
        android:id="@+id/goods_image"
        android:layout_width="68dp"
        android:layout_height="69dp"
        android:scaleType="fitXY"
        android:layout_marginStart="15.5dp"
        android:layout_marginTop="17.5dp"
        android:src="@mipmap/avatar"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/goods_name"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="17.5dp"
        android:text="缅甸翡翠糯冰种圆条手镯缅甸翡翠糯冰缅甸
翡翠糯冰种圆条手镯缅甸翡翠糯冰"
        android:textColor="#ff333333"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/goods_image"
        app:layout_constraintTop_toTopOf="@+id/goods_image" />

    <TextView
        android:id="@+id/goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14.5dp"
        android:text="¥598,00"
        android:textColor="#ffff2b32"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/goods_name"
        app:layout_constraintTop_toBottomOf="@+id/goods_name" />

    <TextView
        android:id="@+id/sku_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="0条好评  100%好评"
        android:layout_marginTop="7dp"
        android:textColor="#ffdddddd"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/goods_name"
        app:layout_constraintStart_toStartOf="@+id/goods_price"
        app:layout_constraintTop_toBottomOf="@+id/goods_price" />

</androidx.constraintlayout.widget.ConstraintLayout>